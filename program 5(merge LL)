struct ListNode* mergeInBetween(struct ListNode* list1, int a, int b, struct ListNode* list2) {

    struct ListNode* beforeA = list1;
    struct ListNode* afterB = list1;

    // Step 1: traverse to node before a
    for (int i = 0; i < a - 1; i++) {
        beforeA = beforeA->next;
    }

    // Step 2: traverse to node after b
    for (int i = 0; i <= b; i++) {
        afterB = afterB->next;
    }

    // Step 3: connect beforeA to list2 head
    beforeA->next = list2;

    // Step 4: move to end of list2
    struct ListNode* tail2 = list2;
    while (tail2->next != NULL) {
        tail2 = tail2->next;
    }

    // Step 5: attach remaining part of list1
    tail2->next = afterB;

    return list1;
}
